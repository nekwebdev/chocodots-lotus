#!/usr/bin/env bash
# https://github.com/nekwebdev/chocodots-lotus
# @nekwebdev
# LICENSE: GPLv3
#
# ~/.local/bin/dotbare
#
# wrapper for dotbare.
#

SCRIPT_DIR="$HOME/.local/src/dotbare"
if [[ -x "$SCRIPT_DIR/dotbare" ]]; then
  "$SCRIPT_DIR/dotbare" "$@"
else
  echo "Install dotbare: git clone https://github.com/kazhala/dotbare.git $SCRIPT_DIR"
fi